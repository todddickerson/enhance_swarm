<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EnhanceSwarm Dashboard</title>
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <i class="fas fa-swatchbook"></i>
            <span>EnhanceSwarm</span>
        </div>
        <div class="nav-links">
            <a href="/" class="nav-link active">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a href="/kanban" class="nav-link">
                <i class="fas fa-columns"></i> Kanban
            </a>
            <a href="/agents" class="nav-link">
                <i class="fas fa-robot"></i> Agents
            </a>
            <a href="/project" class="nav-link">
                <i class="fas fa-project-diagram"></i> Project
            </a>
            <a href="/config" class="nav-link">
                <i class="fas fa-cog"></i> Config
            </a>
        </div>
    </nav>

    <main class="main-content">
        <div class="dashboard">
            <header class="dashboard-header">
                <h1>
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </h1>
                <div class="dashboard-actions">
                    <button class="btn btn-primary" onclick="spawnAgent()">
                        <i class="fas fa-plus"></i> Spawn Agent
                    </button>
                    <button class="btn btn-secondary" onclick="refreshData()">
                        <i class="fas fa-sync"></i> Refresh
                    </button>
                </div>
            </header>

            <div class="dashboard-grid">
                <!-- Status Overview -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-chart-line"></i> Status Overview</h3>
                    </div>
                    <div class="card-body">
                        <div class="status-grid">
                            <div class="status-item" id="session-status">
                                <div class="status-icon">
                                    <i class="fas fa-circle"></i>
                                </div>
                                <div class="status-info">
                                    <span class="status-label">Session</span>
                                    <span class="status-value">Loading...</span>
                                </div>
                            </div>
                            <div class="status-item" id="agents-status">
                                <div class="status-icon">
                                    <i class="fas fa-robot"></i>
                                </div>
                                <div class="status-info">
                                    <span class="status-label">Active Agents</span>
                                    <span class="status-value">0</span>
                                </div>
                            </div>
                            <div class="status-item" id="tasks-status">
                                <div class="status-icon">
                                    <i class="fas fa-tasks"></i>
                                </div>
                                <div class="status-info">
                                    <span class="status-label">Tasks</span>
                                    <span class="status-value">0</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Active Agents -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-robot"></i> Active Agents</h3>
                    </div>
                    <div class="card-body">
                        <div id="active-agents-list">
                            <div class="loading">Loading agents...</div>
                        </div>
                    </div>
                </div>

                <!-- Recent Tasks -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-list-alt"></i> Recent Tasks</h3>
                        <a href="/kanban" class="btn btn-small btn-outline">
                            <i class="fas fa-external-link-alt"></i> View All
                        </a>
                    </div>
                    <div class="card-body">
                        <div id="recent-tasks-list">
                            <div class="loading">Loading tasks...</div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
                    </div>
                    <div class="card-body">
                        <div class="quick-actions">
                            <button class="quick-action-btn" onclick="enhanceProject()">
                                <i class="fas fa-magic"></i>
                                <span>Enhance Project</span>
                            </button>
                            <button class="quick-action-btn" onclick="analyzeProject()">
                                <i class="fas fa-search"></i>
                                <span>Analyze Project</span>
                            </button>
                            <button class="quick-action-btn" onclick="viewMonitoring()">
                                <i class="fas fa-chart-area"></i>
                                <span>Monitor Agents</span>
                            </button>
                            <button class="quick-action-btn" onclick="setupTasks()">
                                <i class="fas fa-clipboard-list"></i>
                                <span>Setup Tasks</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- System Health -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-heartbeat"></i> System Health</h3>
                    </div>
                    <div class="card-body">
                        <div id="system-health">
                            <div class="loading">Checking system health...</div>
                        </div>
                    </div>
                </div>

                <!-- Project Info -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-info-circle"></i> Project Info</h3>
                    </div>
                    <div class="card-body">
                        <div id="project-info">
                            <div class="loading">Loading project information...</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Modals -->
    <div id="spawn-agent-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-robot"></i> Spawn New Agent</h3>
                <button class="modal-close" onclick="closeModal('spawn-agent-modal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="spawn-agent-form">
                    <div class="form-group">
                        <label for="agent-role">Agent Role</label>
                        <select id="agent-role" name="role" required>
                            <option value="general">General</option>
                            <option value="frontend">Frontend</option>
                            <option value="backend">Backend</option>
                            <option value="ux">UX/Design</option>
                            <option value="qa">QA/Testing</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="agent-task">Task Description</label>
                        <textarea id="agent-task" name="task" rows="3" placeholder="Describe what this agent should work on..." required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="agent-worktree" name="worktree" checked>
                            <span class="checkmark"></span>
                            Use separate git worktree
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('spawn-agent-modal')">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary" form="spawn-agent-form">
                    <i class="fas fa-rocket"></i> Spawn Agent
                </button>
            </div>
        </div>
    </div>

    <script src="/assets/js/main.js"></script>
    <script>
        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            initializeDashboard();
            startAutoRefresh();
        });
    </script>
</body>
</html>