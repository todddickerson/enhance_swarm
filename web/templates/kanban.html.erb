<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EnhanceSwarm - Kanban Board</title>
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <i class="fas fa-swatchbook"></i>
            <span>EnhanceSwarm</span>
        </div>
        <div class="nav-links">
            <a href="/" class="nav-link">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a href="/kanban" class="nav-link active">
                <i class="fas fa-columns"></i> Kanban
            </a>
            <a href="/agents" class="nav-link">
                <i class="fas fa-robot"></i> Agents
            </a>
            <a href="/project" class="nav-link">
                <i class="fas fa-project-diagram"></i> Project
            </a>
            <a href="/config" class="nav-link">
                <i class="fas fa-cog"></i> Config
            </a>
        </div>
    </nav>

    <main class="main-content">
        <div class="kanban-container">
            <header class="kanban-header">
                <h1>
                    <i class="fas fa-columns"></i>
                    Task Management
                </h1>
                <div class="kanban-actions">
                    <button class="btn btn-primary" onclick="createTask()">
                        <i class="fas fa-plus"></i> New Task
                    </button>
                    <button class="btn btn-secondary" onclick="refreshKanban()">
                        <i class="fas fa-sync"></i> Refresh
                    </button>
                    <button class="btn btn-outline" onclick="exportTasks()">
                        <i class="fas fa-download"></i> Export
                    </button>
                </div>
            </header>

            <div class="kanban-stats">
                <div class="stat-item">
                    <span class="stat-value" id="total-tasks">0</span>
                    <span class="stat-label">Total Tasks</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="active-tasks">0</span>
                    <span class="stat-label">In Progress</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="completed-tasks">0</span>
                    <span class="stat-label">Completed</span>
                </div>
            </div>

            <div class="kanban-board" id="kanban-board">
                <!-- Kanban columns will be dynamically generated -->
                <div class="loading-kanban">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>Loading task board...</p>
                </div>
            </div>
        </div>
    </main>

    <!-- Task Creation Modal -->
    <div id="create-task-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-plus"></i> Create New Task</h3>
                <button class="modal-close" onclick="closeModal('create-task-modal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="create-task-form">
                    <div class="form-group">
                        <label for="task-title">Task Title</label>
                        <input type="text" id="task-title" name="title" placeholder="Enter task title..." required>
                    </div>
                    <div class="form-group">
                        <label for="task-description">Description</label>
                        <textarea id="task-description" name="description" rows="4" placeholder="Describe the task in detail..."></textarea>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="task-priority">Priority</label>
                            <select id="task-priority" name="priority">
                                <option value="low">Low</option>
                                <option value="medium" selected>Medium</option>
                                <option value="high">High</option>
                                <option value="critical">Critical</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="task-category">Category</label>
                            <select id="task-category" name="category">
                                <option value="feature">Feature</option>
                                <option value="bug">Bug Fix</option>
                                <option value="enhancement">Enhancement</option>
                                <option value="research">Research</option>
                                <option value="documentation">Documentation</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="task-agents">Recommended Agents</label>
                        <div class="checkbox-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="agents" value="frontend">
                                <span class="checkmark"></span>
                                Frontend
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="agents" value="backend">
                                <span class="checkmark"></span>
                                Backend
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="agents" value="ux">
                                <span class="checkmark"></span>
                                UX/Design
                            </label>
                            <label class="checkbox-label">
                                <input type="checkbox" name="agents" value="qa">
                                <span class="checkmark"></span>
                                QA/Testing
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('create-task-modal')">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary" form="create-task-form">
                    <i class="fas fa-plus"></i> Create Task
                </button>
            </div>
        </div>
    </div>

    <!-- Task Details Modal -->
    <div id="task-details-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="task-details-title">Task Details</h3>
                <button class="modal-close" onclick="closeModal('task-details-modal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="task-details-body">
                <!-- Task details will be populated dynamically -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeModal('task-details-modal')">
                    Close
                </button>
                <button type="button" class="btn btn-primary" onclick="editTask()">
                    <i class="fas fa-edit"></i> Edit Task
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
    <script src="/assets/js/main.js"></script>
    <script src="/assets/js/kanban.js"></script>
    <script>
        // Initialize kanban board
        document.addEventListener('DOMContentLoaded', function() {
            initializeKanban();
            loadKanbanData();
        });
    </script>
</body>
</html>